<%- include('partials/cdn') %>

<div class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="bg-white shadow-lg rounded-2xl p-8 max-w-3xl w-full">
        <h2 class="text-3xl font-bold text-gray-800">Welcome, <%= user.name %>!</h2>
        <p class="text-gray-600 mt-2">Your role: 
            <span class="px-3 py-1 text-white rounded-lg 
                <% if (user.role === 'Helpdesk Operator') { %> bg-blue-500 <% } %>
                <% if (user.role === 'IT Technician') { %> bg-green-500 <% } %>
                <% if (user.role === 'Office Manager') { %> bg-red-500 <% } %>">
                <%= user.role %>
            </span>
        </p>

        <% if (user.office_name) { %>
            <div class="bg-gray-50 p-5 mt-5 rounded-xl border border-gray-200">
                <h5 class="text-lg font-semibold text-gray-700">Office Details</h5>
                <p class="text-gray-600"><strong>Office Name:</strong> <%= user.office_name %></p>
                <p class="text-gray-600"><strong>Address:</strong> <%= user.address %></p>
                <p class="text-gray-600"><strong>Contact:</strong> <%= user.contact %></p>
            </div>
        <% } else { %>
            <p class="text-yellow-500 font-medium mt-4">No office assigned</p>
        <% } %>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
            <% if (user.role === 'Helpdesk Operator') { %>
                <a href="/tickets/new" 
                    class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg text-center shadow-md transition">
                    Create Ticket
                </a>
            <% } %>

            <a href="/tickets" 
                class="bg-teal-500 hover:bg-teal-600 text-white font-semibold py-3 px-6 rounded-lg text-center shadow-md transition">
                View Tickets
            </a>

            <% if (user.role === 'Office Manager') { %>
                <a href="/tickets/reports" 
                    class="bg-purple-500 hover:bg-purple-600 text-white font-semibold py-3 px-6 rounded-lg text-center shadow-md transition">
                    View Reports
                </a>
            <% } %>

            <a href="/logout" 
                class="bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-6 rounded-lg text-center shadow-md transition">
                Logout
            </a>
        </div>
    </div>
</div>
