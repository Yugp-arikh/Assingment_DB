<%- include('partials/cdn') %>

<div class="container mt-4">
    <h2>Welcome, <%= user.name %>!</h2>
    <p>Your role: <strong><%= user.role %></strong></p>

    <div class="row mt-4">
        <% if (user.role === 'Helpdesk Operator') { %>
            <div class="col-md-4">
                <a href="/tickets/new" class="btn btn-primary w-100">Create Ticket</a>
            </div>
        <% } %>
        <div class="col-md-4">
            <a href="/tickets" class="btn btn-info w-100">View Tickets</a>
        </div>
        <div class="col-md-4">
            <a href="/logout" class="btn btn-danger w-100">Logout</a>
        </div>
    </div>
</div>
